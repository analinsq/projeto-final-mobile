<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D9D9D9"
    android:gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#070030"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageButton
            android:id="@+id/bt_perfiluser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:background="@drawable/perfiluser"
            android:padding="16dp" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="651dp"
        android:layout_gravity="center"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <EditText
            android:id="@+id/et_nomeanimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@drawable/edit_text_cadastro"
            android:backgroundTint="@null"
            android:hint="Digite o nome do animal"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="#D9D9D9" />

        <EditText
            android:id="@+id/et_idadeanimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_nomeanimal"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_cadastro"
            android:backgroundTint="@null"
            android:hint="Digite a idade do animal"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="#D9D9D9" />

        <EditText
            android:id="@+id/et_racaanimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_idadeanimal"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_cadastro"
            android:hint="Digite a raÃ§a do animal"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="#D9D9D9" />

        <Button
            android:id="@+id/bt_sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF8C00"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:text="Sair"
            android:textColor="#FFFFFF" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>