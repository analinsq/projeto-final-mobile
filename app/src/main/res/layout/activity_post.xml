<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D9D9D9"
    android:gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#070030"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_olauser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:padding="8dp"
            android:text="Olá, user!"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/bt_perfiluser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="16dp"
            android:background="@drawable/perfiluser"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:background="#070030"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/et_nomeanimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_cadastro"
            android:backgroundTint="@null"
            android:hint="Digite o nome do animal"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#D9D9D9" />

        <EditText
            android:id="@+id/et_racaanimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_cadastro"
            android:hint="Digite a raça do animal"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#D9D9D9" />

        <EditText
            android:id="@+id/et_coranimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_cadastro"
            android:backgroundTint="@null"
            android:hint="Digite a cor do animal"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#D9D9D9" />

        <EditText
            android:id="@+id/et_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_cadastro"
            android:backgroundTint="@null"
            android:hint="Digite a descrição do animal"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#D9D9D9" />

        <Button
            android:id="@+id/bt_publi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:backgroundTint="#FF8C00"
            android:text="Publicar"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_textocadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="176dp"
        android:text="Criando novo post"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.807" />

</androidx.constraintlayout.widget.ConstraintLayout>